<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/shoppingscreenbackground">

    <TextView
        android:id="@+id/shoppingText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/logoutButton"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:text="Hello, Welcome to Smart Shopping.. We are currently under Progress, we will be back soon
         with something very interesting !!"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="19sp"
        android:textStyle="italic|bold" />

    <Button
        android:id="@+id/logoutButton"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="60dp"
        android:onClick="logout"
        android:text="Logout"
        android:textColor="@color/colorAccent"
        android:textSize="18sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/userprofile"
        style="@android:style/Widget.Holo.Button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/logoutButton"
        android:layout_marginStart="28dp"
        android:layout_marginTop="10dp"
        android:onClick="editUserProfile"
        android:text="My Profile"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/logoutButton"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="25dp"
        android:background="@android:color/black"
        android:text="Get Stores Near me"
        android:textColor="@color/colorAccent" />

</RelativeLayout>